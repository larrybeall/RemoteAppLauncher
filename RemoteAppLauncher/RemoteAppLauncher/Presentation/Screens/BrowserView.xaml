<UserControl x:Class="RemoteAppLauncher.Presentation.Screens.BrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:micro="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
             xmlns:items="clr-namespace:RemoteAppLauncher.Presentation.Items">
    <Grid>
        <TreeView 
            x:Name="Entries"
            BorderThickness="0"
            Background="Transparent"
            micro:Message.Attach="[Event SelectedItemChanged] = [Action OnSelectionChanged($eventArgs)]">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.Resources>
                <HierarchicalDataTemplate 
                    DataType="{x:Type items:DirectoryItemViewModel}" 
                    ItemsSource="{Binding Children}">
                    <items:LargeIconEntryView micro:Bind.Model="{Binding}" />
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type items:FileItemViewModel}">
                    <items:LargeIconEntryView micro:Bind.Model="{Binding}" />
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>